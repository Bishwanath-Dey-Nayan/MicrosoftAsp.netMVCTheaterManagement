@model IEnumerable<PLTheater.Models.Cinema>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Basic Info
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IMDBLink)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <b>@Html.DisplayFor(modelItem => item.Name)</b><br />
            Category : @Html.DisplayFor(modelItem => item.Category.Name)<br />
            Genre : @Html.DisplayFor(modelItem => item.Genre.Name)<br />
            Producer : @Html.DisplayFor(modelItem => item.Producer.Name)<br />
            Duration : @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            <p>@Html.DisplayFor(modelItem => item.Description)</p>
        </td>
        <td>
           @Html.Raw(item.TrailerLink)
        </td>
        <td>
            <a href="@item.IMDBLink" target="_blank">@item.IMDBLink</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
